{
    "family": "$APP_NAME",
    "containerDefinitions": [
        {
            "name": "$APP_NAME",
            "image": "$DOCKER_REPO/$APP_NAME:$APP_VERSION",
            "cpu": 128,
            "memory": 516,
            "memoryReservation": 256,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 0
                }
            ],
            "essential": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "$STAGE-$APP_NAME",
                    "awslogs-region": "ap-southeast-1",
                    "awslogs-stream-prefix": "$APP_NAME"
                }
            }
        }
    ]
}
